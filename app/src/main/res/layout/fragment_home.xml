<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- WavePark 로고/아이콘 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="WavePark 로고" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WavePark"
                android:textAppearance="@style/TextAppearance.WavePark.Headline2"
                android:textColor="@color/ocean_blue"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- 오늘의 세션 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:strokeColor="@color/session_blue"
            app:strokeWidth="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/ocean_blue_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="오늘의 세션"
                    android:textAppearance="@style/TextAppearance.WavePark.Headline2"
                    android:textColor="@color/ocean_blue_dark"
                    android:fontFamily="sans-serif-medium" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ocean_blue_dark"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text_today_session_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10:00~11:00  |  초급  |  좌 2  |  우 0"
                        android:textAppearance="@style/TextAppearance.WavePark.Body1"
                        android:textColor="@color/text_on_primary"
                        android:fontFamily="sans-serif-medium" />

                    <!-- 잔여좌석 뱃지 -->
                    <TextView
                        android:id="@+id/badge_session_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="좌 2"
                        android:background="@drawable/session_badge_background"
                        android:textColor="@color/ocean_blue_dark"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/badge_session_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="우 0"
                        android:background="@drawable/session_badge_background"
                        android:textColor="@color/coral_orange"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginStart="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 날씨/수온 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/wave_blue"
            app:strokeWidth="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/wave_blue_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/img_weather_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_weather_sunny"
                    android:contentDescription="날씨 아이콘"
                    android:tint="@color/ocean_blue_dark" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/text_weather_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="맑음, 25°C"
                        android:textAppearance="@style/TextAppearance.WavePark.Body1"
                        android:textColor="@color/ocean_blue_dark"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/text_weather_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="경기도 시흥시 정왕동"
                        android:textAppearance="@style/TextAppearance.WavePark.Caption"
                        android:textColor="@color/text_on_primary"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/text_water_temp_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수온"
                        android:textAppearance="@style/TextAppearance.WavePark.Caption"
                        android:textColor="@color/text_on_primary" />
                    <TextView
                        android:id="@+id/text_water_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--°C"
                        android:textAppearance="@style/TextAppearance.WavePark.Body1"
                        android:textColor="@color/ocean_blue_dark"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 이벤트 목록 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이벤트"
            android:textAppearance="@style/TextAppearance.WavePark.Headline2"
            android:textColor="@color/ocean_blue"
            android:paddingStart="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:overScrollMode="never"
            android:clipToPadding="false" />

        <!-- 인스타/홈페이지 이동 버튼 (하단 고정) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="8dp"
                android:gravity="center">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_instagram"
                    app:tint="@color/white"
                    app:backgroundTint="@color/ocean_blue"
                    android:contentDescription="인스타그램 이동" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="팔로우"
                    android:textAppearance="@style/TextAppearance.WavePark.Caption"
                    android:textColor="@color/ocean_blue"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_homepage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_black_24dp"
                    app:tint="@color/white"
                    app:backgroundTint="@color/wave_blue"
                    android:contentDescription="홈페이지 이동" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방문하기"
                    android:textAppearance="@style/TextAppearance.WavePark.Caption"
                    android:textColor="@color/wave_blue"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>