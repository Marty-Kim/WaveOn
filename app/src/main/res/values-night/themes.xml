<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WavePark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wave_blue_light</item>
        <item name="colorPrimaryVariant">@color/ocean_blue_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/coral_orange_light</item>
        <item name="colorSecondaryVariant">@color/coral_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- 배경 색상 -->
        <item name="android:colorBackground">@color/gray_dark</item>
        <item name="colorSurface">@color/gray_dark</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- 텍스트 색상 -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_light</item>
        <item name="android:textColorTertiary">@color/gray_medium</item>
        
        <!-- 폰트 설정 - 시스템 폰트 사용 -->
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        
        <!-- Material Design 컴포넌트 스타일 -->
        <item name="materialButtonStyle">@style/Widget.WavePark.Button</item>
        <item name="textInputStyle">@style/Widget.WavePark.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.WavePark.BottomNavigation</item>
    </style>
</resources>