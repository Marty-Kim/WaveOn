<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WavePark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wave_blue_light</item>
        <item name="colorPrimaryVariant">@color/ocean_blue</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/wave_blue</item>
        <item name="colorSecondaryVariant">@color/wave_blue</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- 배경 색상 -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- 텍스트 색상 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        
        <!-- 폰트 설정 - 시스템 폰트 사용 -->
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        
        <!-- Material Design 컴포넌트 스타일 -->
        <item name="materialButtonStyle">@style/Widget.WavePark.Button</item>
        <item name="textInputStyle">@style/Widget.WavePark.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.WavePark.BottomNavigation</item>
    </style>
    
    <!-- 버튼 스타일 -->
    <style name="Widget.WavePark.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <!-- 텍스트 입력 스타일 -->
    <style name="Widget.WavePark.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/text_tertiary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
    
    <!-- 하단 네비게이션 스타일 -->
    <style name="Widget.WavePark.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/background_surface</item>
        <item name="itemTextColor">@color/text_secondary</item>
        <item name="itemIconTint">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- 카드 스타일 -->
    <style name="Widget.WavePark.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- 텍스트 스타일 -->
    <style name="TextAppearance.WavePark.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:includeFontPadding">false</item>

        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">32sp</item>
    </style>
    
    <style name="TextAppearance.WavePark.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:includeFontPadding">false</item>

        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">28sp</item>
    </style>
    
    <style name="TextAppearance.WavePark.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.WavePark.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:includeFontPadding">false</item>

        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.WavePark.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
    </style>
    
